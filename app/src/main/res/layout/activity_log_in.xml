<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignUp">


    <TextView
        android:id="@+id/textview"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_margin="50dp"
        android:text="Log in"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:text="Login in with one of the following options"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="85dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="401dp"
        android:layout_height="63dp"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:hint="hey@olivercederborg.com"

        ndroid:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/Password"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="@+id/Password"
        tools:layout_editor_absoluteY="226dp"
        style=@style/widget.MaterialComponent.TextInputLayout.OutlinedBox/>

    <EditText
        android:id="@+id/Password"
        android:layout_width="406dp"
        android:layout_height="64dp"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:hint="Enter your password"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="342dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Email"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="323dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:text="Login In"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/textView6"
        t
        android:layout_width="173dp"
        android:layout_height="21dp"
        android:text="Do Have An Account?"
        android:textAlignment="center"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="503dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="129dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/googleicon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="139dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/Apple"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="127dp" />

</androidx.constraintlayout.widget.ConstraintLayout>