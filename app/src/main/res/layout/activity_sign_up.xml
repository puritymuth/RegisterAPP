<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignUp">


    <TextView
        android:id="@+id/textview"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_margin="50dp"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:text="Sign up with one of the following options"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="85dp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="338dp"
        android:layout_height="64dp"
        android:layout_below="@+id/textView2"
        android:hint="Oliver Cederborg"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/Email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Email"
        tools:layout_editor_absoluteY="214dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="357dp"
        android:layout_height="62dp"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:hint="team@apple.com"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/Password"
        app:layout_constraintStart_toStartOf="@+id/Password"
        tools:layout_editor_absoluteY="322dp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="387dp"
        android:layout_height="56dp"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:hint="pick a strong password"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="459dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#F1E8E8"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="@+id/Name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="303dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:text="Create Account"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/textView6"
        t
        android:layout_width="185dp"
        android:layout_height="21dp"
        android:text="Already Have An Account?"
        android:textAlignment="center"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="620dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:text="Log in"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="620dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="129dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/googleicon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="139dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/Apple"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="127dp" />

</androidx.constraintlayout.widget.ConstraintLayout>